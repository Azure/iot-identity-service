#!/bin/bash
# postrm script for aziot-identity-service
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
	purge)
		systemctl daemon-reload

		# Delete directories used by aziot-identity-service.
		# Home directories are not deleted here; they will be deleted with their user.
		if [ -d /etc/aziot ]; then
			services=("identityd" "certd" "keyd" "tpmd")

			for service in "${services[@]}"; do
				rm -rf "/etc/aziot/${service}"
			done

			if [ -z "$(ls -A /etc/aziot)" ]; then
				rm -rf /etc/aziot
			fi
		fi

		rm -rf /run/aziot

		# Delete aziot-identity-service users.
		users=("aziotid" "aziotcs" "aziotks" "aziottpm")

		for user in "${users[@]}"; do
			/usr/sbin/userdel "$user"
		done

		if [ -d /var/lib/aziot ] && [ -z "$(ls -A /var/lib/aziot)" ]; then
			rm -rf /var/lib/aziot
		fi
		;;
	remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
		;;
	*)
		>&2 echo "postrm called with unknown argument '$1'"
		exit 1
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
